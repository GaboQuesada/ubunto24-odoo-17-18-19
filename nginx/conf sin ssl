# --- UPSTREAMS ---
upstream odoo {
    server 127.0.0.1:8069;
}

upstream odoochat {
    server 127.0.0.1:8072;
}

# --- SERVIDOR HTTP (SIN SSL) ---
server {
    listen 80;
    server_name gustos.sistemaodoo.com www.gustos.sistemaodoo.com;

    # He actualizado el nombre de los logs para que coincidan con este dominio
    access_log /var/log/nginx/gustos.access.log;
    error_log /var/log/nginx/gustos.error.log;

    # Tiempos de espera
    proxy_read_timeout 720s;
    proxy_connect_timeout 720s;
    proxy_send_timeout 720s;

    # Headers generales
    proxy_set_header X-Forwarded-Host $host;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Real-IP $remote_addr;

    # --- CHAT / WEBSOCKETS ---
    location /websocket {
        proxy_pass http://odoochat;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Real-IP $remote_addr;
    }

    # --- ODOO WEB ---
    location / {
        proxy_pass http://odoo;
        proxy_redirect off;
    }

    # Compresi√≥n
    gzip on;
    gzip_min_length 1000;
    gzip_types text/plain text/css application/json application/javascript text/xml;
}
